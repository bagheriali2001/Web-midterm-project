<body>
    <%- include('../includes/adminNavigation.ejs') %>

    <main class="float-left w-100">
        <section class="float-left w-100 py-4 bg-light">
            <div class="container d-flex justify-content-center">
                <h2>ارتباط راهنما و خدمت</h2>
            </div>
        </section>
        
        <section class="float-left w-100 py-4">
            <div class="container">
                <form class="connection-form mx-auto" style="max-width: 450px;font-weight: 500;" action="/addguideandservice/add" method="POST">
                    
                    <div class="form-group">
                        <label for="title">عنوان راهنما:</label>
                        <select class="form-control" name="guide" id="guideSlelct">
                            <option value="" id="model1" selected>انتخاب کنید</option>
                            <% for(var i = 0; i < guides.length; i++) { %>
                                <option value="<%= guides[i].id %>"><%= guides[i].title %></option>
                            <% } %>
                        </select>
                    </div>   
    
                    <div class="form-group">
                        <label for="title">عنوان خدمت:</label>
                        <select class="form-control" name="service" id="serviceSelect">
                            <option value="" id="model2" selected>انتخاب کنید</option>
                            <% for(var i = 0; i < services.length; i++) { %>
                                <option value="<%= services[i].id %>"><%= services[i].name %></option>
                            <% } %>
                        </select>
                    </div>                
    
                    <button type="submit" class="btn btn-primary" id="submitDisable" disabled>ارسال</button>
                </form>
            </div>
        </section>
    </main>

    <%- include('../includes/footer.ejs') %>

<%- include('../includes/end.ejs') %>
      