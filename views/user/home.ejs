<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="css/home.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main class="float-left w-100">
        <section class="slider float-left w-100">
            <div class="container-fluid">
                <div id="carouselExampleIndicators" class="carousel slide slider-content" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="images/slider/img3.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="images/slider/new-site3.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="images/slider/UudqQy.jpg" alt="Third slide">
                    </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </section>

        <section class="news float-left w-100 py-4">
            <div class="container">
                <div class="news-content float-left w-100">
                    <% if(news.length > 0) { %>
                    <div class="news-card col-12 col-md-6 col-lg-3 card float-left px-2 border-0 py-3 bg-light">
                        <img class="card-img-top mx-auto img-news" src="<%= news[0].img %>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= news[0].title %></h5>
                            <p class="card-text text-center"><%= news[0].description %></p>
                            <div class="">
                                <a href="/news/<%= news[0].id %>"><button type="button" class="btn btn-outline-info p-1 float-right">ادامه اخبار</button></a>
    
                                <time class="float-left"><%= news[0].date %></time>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% if(news.length > 1) { %>
                    <div class="news-card col-12 col-md-6 col-lg-3 card float-left px-2 border-0 py-3 bg-light">
                        <img class="card-img-top mx-auto img-news" src="<%= news[1].img %>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= news[1].title %></h5>
                            <p class="card-text text-center"><%= news[1].description %></p>
                            <div class="">
                                <a href="/news/<%= news[1].id %>"><button type="button" class="btn btn-outline-info p-1 float-right">ادامه اخبار</button></a>
    
                                <time class="float-left"><%= news[1].date %></time>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% if(news.length > 2) { %>
                    <div class="news-card col-12 col-md-6 col-lg-3 card float-left px-2 border-0 py-3 bg-light">
                        <img class="card-img-top mx-auto img-news" src="<%= news[3].img %>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= news[2].title %></h5>
                            <p class="card-text text-center"><%= news[2].description %></p>
                            <div class="">
                                <a href="/news/<%= news[2].id %>"><button type="button" class="btn btn-outline-info p-1 float-right">ادامه اخبار</button></a>
    
                                <time class="float-left"><%= news[2].date %></time>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% if(news.length > 3) { %>
                    <div class="news-card col-12 col-md-6 col-lg-3 card float-left px-2 border-0 py-3 bg-light">
                        <img class="card-img-top mx-auto img-news" src="<%= news[3].img %>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title text-center"><%= news[3].title %></h5>
                            <p class="card-text text-center"><%= news[3].description %></p>
                            <div class="">
                                <a href="/news/<%= news[3].id %>"><button type="button" class="btn btn-outline-info p-1 float-right">ادامه اخبار</button></a>
    
                                <time class="float-left"><%= news[3].date %></time>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>  
        </section>
    
        <section class="float-left w-100 py-4">
            <div class="container">
                <div class="float-left w-100 d-md-flex align-items-center">
                    <div class="system-users col-12 col-md-6 order-md-2 float-right">
                        <h4>آمار کاربران سامانه ها</h4>
                        <ul class="list-unstyled p-0">
                            <li><i class="fa fa-circle text-info" aria-hidden="true"></i>کاربران آنلاین: <span class="text-info"><%= analytics["online"] %></span></li>
                            <li><i class="fa fa-circle text-info" aria-hidden="true"></i>امروز: <span class="text-info"><%= analytics["today"] %></span></li>
                            <li><i class="fa fa-circle text-info" aria-hidden="true"></i>هفته گذشته: <span class="text-info"><%= analytics["last_week"] %></span></li>
                            <li><i class="fa fa-circle text-info" aria-hidden="true"></i>ماه کذشته: <span class="text-info"><%= analytics["last_month"] %></span></li>
                            <li><i class="fa fa-circle text-info" aria-hidden="true"></i>کل: <span class="text-info"><%= analytics["total"] %></span></li>
                        </ul>
                    </div>
    
                    <div class="active-systems col-12 col-md-6 order-md-2 float-right">
                        <h4>وضعیت فعال بودن سامانه های دانشکاه</h4>
                        <ul class="list-unstyled p-0">
                            <li><a href="https://golestan.nit.ac.ir/home/Default.htm" class="<%= serviceStatus['golestan'] === true ? 'text-info' : 'text-danger'%>"><i class="fa fa-circle" aria-hidden="true"></i>سامانه گلستان</a></li>
                            <li><a href="https://www.nit.ac.ir/" class="<%= serviceStatus['main_website'] === true ? 'text-info' : 'text-danger'%>"><i class="fa fa-circle" aria-hidden="true"></i>سایت اصلی دانشگاه</a></li>
                            <li><a href="https://lms8.nit.ac.ir/LoginPage.aspx?ReturnUrl=%2fHomePage.aspx" class="<%= serviceStatus['lms'] === true ? 'text-info' : 'text-danger'%>"><i class="fa fa-circle" aria-hidden="true"></i>سیستم مدیریت یادگیری الکترونیکی</a></li>
                            <li><a href="http://food.nit.ac.ir/" class="<%= serviceStatus['food'] === true ? 'text-info' : 'text-danger'%>"><i class="fa fa-circle" aria-hidden="true"></i>سیستم اتوماسیون تغذیه</a></li>
                        </ul>
                    </div>
                </div>
                
            </div>  
        </section>



    </main>
    
        <%- include('../includes/footer.ejs') %>

<%- include('../includes/end.ejs') %>