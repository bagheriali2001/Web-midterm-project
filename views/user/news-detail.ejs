<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="css/newsDetail.css">
    </head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main class="float-left w-100">

        <section class="float-left w-100 py-4 bg-light">
            <div class="container ">
                <div class="d-flex justify-content-center">
                    <img class="news-img overflow-auto col-12 float-right" src="<%= news.img %>" alt="news image">
                </div>
                <div class="d-flex justify-content-center">
                    <h2 class="py-4"><%= news.title %></h2>
                </div>
                <div class="d-flex justify-content-center">
                    <p><%= news.text %></p>
                </div>
                <div>
                    <span class="float-right"><%= news.author %></span>
                    <span class="float-left"><%= news.date %></span>
                </div>
            </div>
            
        </section>
        
    
    </main>

    <%- include('../includes/footer.ejs') %>

<%- include('../includes/end.ejs') %>